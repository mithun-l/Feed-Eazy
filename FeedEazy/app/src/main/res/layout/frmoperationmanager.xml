        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

    <EditText
        android:id="@+id/txt_itemname"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter Staff Name"
